<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/detail_problem_category_layout"
        style="@style/AutoCompleteDropDown"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginTop="10sp"
        android:backgroundTint="@color/black"
        android:hint="@string/problem_category_hint_text"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        app:hintTextColor="@color/black"
        app:strokeColor="@color/black">

        <AutoCompleteTextView
            android:id="@+id/detail_problem_category_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:background="@null"
            android:lines="5"
            android:padding="10sp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/detail_problem_source_layout"
        style="@style/AutoCompleteDropDown"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/problem_source_hint_text"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        app:hintTextColor="@color/black"
        app:strokeColor="@color/black">

        <AutoCompleteTextView
            android:id="@+id/detail_problem_source_dropdown"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/detail_problem_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/problem_hint_text"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        app:hintTextColor="@color/black"
        app:strokeColor="@color/black">

        <AutoCompleteTextView
            android:id="@+id/detail_problem_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/detail_cause_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="@string/cause_hint_text"
        android:labelFor="@id/detail_cause_dropdown"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        app:hintTextColor="@color/black"
        app:strokeColor="@color/black">

        <AutoCompleteTextView
            android:id="@+id/detail_cause_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/detail_action_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_gravity="start"
        android:hint="@string/action_hint_text"
        android:paddingStart="4sp"
        android:paddingEnd="4sp"
        app:hintTextColor="@color/black"
        app:strokeColor="@color/black">

        <AutoCompleteTextView
            android:id="@+id/detail_action_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:padding="10sp"
            android:textSize="16sp" />

    </com.google.android.material.textfield.TextInputLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <FrameLayout
            android:id="@+id/frameLayout2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:layout_constraintBottom_toTopOf="@+id/rca_button_layout"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread">

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rca_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rca_update_button"
                style="@style/PrimaryActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:text="@string/update"
                android:textColor="@color/black"
                app:icon="@drawable/ic_check_circle_24px"
                app:iconGravity="start"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rca_cancel_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rca_cancel_button"
                style="@style/PrimaryActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:text="@string/cancel"
                android:textColor="@color/black"
                app:icon="@drawable/ic_cancel_24px"
                app:iconGravity="start"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rca_update_button"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>