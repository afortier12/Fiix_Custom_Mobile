<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/hour_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        app:layout_constraintEnd_toStartOf="@id/task_actual"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/incrActualHour"
            style="@style/buttonIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/add_hour"
            app:srcCompat="@drawable/ic_add_box_24px" />

        <ImageButton
            android:id="@+id/decActualHour"
            style="@style/buttonIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/sub_hour"
            app:srcCompat="@drawable/ic_remove_box_24px" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/task_actual"
        style="@style/TextInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/actual_time"
        android:padding="10dp"
        app:layout_constraintEnd_toStartOf="@id/minute_button_layout"
        app:layout_constraintStart_toEndOf="@id/hour_button_layout"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/task_actual_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:gravity="center_horizontal|center_vertical"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/minute_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/task_actual"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/incrActualMin"
            style="@style/buttonIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginTop="2dp"
            android:contentDescription="@string/add_minute"
            app:srcCompat="@drawable/ic_add_box_24px" />

        <ImageButton
            android:id="@+id/decActualMinute"
            style="@style/buttonIcon"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="start"
            android:layout_marginTop="0dp"
            android:contentDescription="@string/sub_minute"
            app:srcCompat="@drawable/ic_remove_box_24px" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/note_button_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_actual">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/note_layout"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:hint="@string/notes_hint_text"
            android:paddingStart="4sp"
            android:paddingEnd="4sp"
            app:hintTextAppearance="@style/DropdownHintText"
            app:hintTextColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeColor="@color/black">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/detail_note"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="top|start"
                android:imeOptions="actionNext"
                android:inputType="textLongMessage"
                android:scrollHorizontally="false" />

        </com.google.android.material.textfield.TextInputLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/update_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/note_layout">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rca_update_button"
                style="@style/PrimaryActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:text="@string/update"
                android:textColor="@color/black"
                app:icon="@drawable/ic_check_circle_24px"
                app:iconGravity="start"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rca_cancel_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/black" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/rca_cancel_button"
                style="@style/PrimaryActionButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="56dp"
                android:text="@string/cancel"
                android:textColor="@color/black"
                app:icon="@drawable/ic_cancel_24px"
                app:iconGravity="start"
                app:iconTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/rca_update_button"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/black" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>